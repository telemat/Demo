<Page
    x:Class="FlickrApp.SearchPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FlickrApp"
    xmlns:viewModels="using:FlickrApp.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <d:Page.DataContext>
        <!--design only-->
        <viewModels:SearchPageViewModel />
    </d:Page.DataContext>
    <Page.DataContext>
        <viewModels:SearchPageViewModel />
    </Page.DataContext>

    <Grid x:Name="LayoutRoot">

        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition />
            </TransitionCollection>
        </Grid.ChildrenTransitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Title Panel -->
        <StackPanel Grid.Row="0" Margin="19,0,0,0">
            <TextBlock Text="Flickr App (Search Page)" Style="{ThemeResource TitleTextBlockStyle}" Margin="0,12,0,0" />
            <!--<TextBlock Text="Search Page" Margin="0,-6.5,0,26.5" Style="{ThemeResource HeaderTextBlockStyle}"
                       CharacterSpacing="{ThemeResource PivotHeaderItemCharacterSpacing}" />-->
        </StackPanel>

        <!--TODO: Content should be placed within the following grid-->
        <Grid Grid.Row="1" x:Name="ContentRoot" Margin="19,9.5,19,0">
            <Grid>
                <TextBox x:Name="SearchTextBox"
                         HorizontalAlignment="Stretch"
                         PlaceholderText="Search"
                         Text="{Binding SearchTerm, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         KeyUp="SearchTextBox_KeyUp" />

                <Button MinWidth="32" BorderThickness="0" 
                        VerticalAlignment="Top" HorizontalAlignment="Right"
                        HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                    <Image Source="Assets/cancel.png"
                           Width="32" Height="32" />
                </Button>
            </Grid>
            <GridView x:Name="gridView" Margin="0,50,0,0"
                      HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                      ItemsSource="{Binding Photos}">
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="2,2,2,2"
                                BorderThickness="2.0"
                                Width="180" Height="200">
                            <Grid>
                                <Image Source="{Binding ThumbnailUrl}" VerticalAlignment="Top" />
                                <TextBlock Text="{Binding ThumbnailLabel}" FontSize="16" VerticalAlignment="Bottom"
                                           HorizontalAlignment="Center" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>

            <!--<TextBox x:Name="SearchTextBox" PlaceholderText="Search"
                     Text="{Binding SearchTerm, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     KeyUp="SearchTextBox_KeyUp" />

            <GridView x:Name="gridView" Margin="0,50,0,0"
                      HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                      ItemsSource="{Binding Photos}">
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="2,2,2,2"
                                BorderThickness="2.0"
                                Width="180" Height="200">
                            <Grid>
                                <Image Source="{Binding ThumbnailUrl}" VerticalAlignment="Top" />
                                <TextBlock Text="{Binding ThumbnailLabel}" FontSize="16" VerticalAlignment="Bottom"
                                           HorizontalAlignment="Center" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>-->
        </Grid>
    </Grid>
    <Page.BottomAppBar>
        <CommandBar IsSticky="True" x:Name="appBar">
            <CommandBar.PrimaryCommands>
                <!-- Icon enums @ https://msdn.microsoft.com/en-us/library/windows/apps/windows.ui.xaml.controls.symbol-->
                <AppBarButton Icon="Find" IsCompact="True" Label="Search"/>
            </CommandBar.PrimaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
</Page>